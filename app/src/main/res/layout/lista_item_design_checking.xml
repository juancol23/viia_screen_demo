<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:id="@+id/linearIdDetailsChecking"
            android:paddingTop="10dp"
            >

            <ImageView
                android:id="@+id/viia_list_desgin_checking_urlImagen1"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="40dp"
                />
            <ImageView
                android:id="@+id/viia_list_desgin_checking_urlImagen2"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/viia_list_desgin_checking_punto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Punto:"
                    />

                <TextView
                    android:id="@+id/viia_list_desgin_checking_CreatedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="CreateAt:"
                    />
                <TextView
                    android:id="@+id/viia_list_desgin_checking_estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="estado:"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/viia_list_desgin_checking_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="estado:"
                    android:visibility="gone"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/viia_list_desgin_checking_usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:background="@color/secondary_text"
                    android:textColor="@color/white"
                    android:padding="0.2dp"
                    android:text="Usuario:"
                    />
                <TextView
                    android:id="@+id/viia_list_desgin_checking_responsable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Responsable:"
                    />

            </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/estadoImagen"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_manage" />
            </LinearLayout>

        </LinearLayout>



</LinearLayout>