<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/imagenPostTask2"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/cargando" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:id="@+id/LinearList"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Punto"
            android:id="@+id/textoPuntoTask"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imagenPostTask"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text= "Fecha"
            android:id="@+id/textoFechaTask"
            android:layout_below="@+id/textoPuntoTask"
            android:layout_toRightOf="@+id/textoPuntoTask"
            android:layout_alignLeft="@+id/textoPuntoTask" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Usuario"
            android:id="@+id/textoUsuarioTask"
            android:layout_below="@+id/textoFechaTask"
            android:layout_alignLeft="@+id/textoFechaTask"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Estado"

            android:id="@+id/textoStatusTask2"
            android:layout_below="@+id/textoUsuarioTask"
            android:layout_alignLeft="@+id/textoUsuarioTask"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Usuario"
            android:visibility="gone"

            android:id="@+id/textoAddressTask"
            android:layout_below="@+id/textoLocationTask"
            android:layout_alignLeft="@+id/textoLocationTask"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Usuario"
            android:visibility="gone"

            android:id="@+id/textoLocationTask"
            android:layout_below="@+id/textoAddressTask"
            android:layout_alignLeft="@+id/textoAddressTask"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Usuario"
            android:visibility="gone"

            android:id="@+id/textoCreadoPorTask"
            android:layout_below="@+id/textoStatusTask"
            android:layout_alignLeft="@+id/textoStatusTask"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Usuario"
            android:visibility="gone"
            android:id="@+id/textoObservacionTask"
            android:layout_below="@+id/textoCreadoPorTask"
            android:layout_alignLeft="@+id/textoCreadoPorTask"
            />
    </LinearLayout>



</LinearLayout>

